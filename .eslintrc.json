{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"rules": {
		"max-len": "off",
		"mediawiki/class-doc": "warn",
		"mediawiki/msg-doc": "warn",
		"jquery/no-each-util": "off",
		"jquery/no-map-util": "off",
		"jsdoc/no-undefined-types": [
			"warn",
			{
				"definedTypes": [
					"uw"
				]
			}
		],
		"no-shadow": "warn",
		"es-x/no-regexp-u-flag": "warn",
		"es-x/no-typed-arrays": "warn",
		"no-unused-vars": "warn",
		"es-x/no-object-assign": "warn",
		"no-mixed-spaces-and-tabs": "warn",
		"prefer-const": "warn",
		"implicit-arrow-linebreak": "warn",
		"no-jquery/no-done-fail": "warn",
		"no-redeclare": "warn"
	}
}
